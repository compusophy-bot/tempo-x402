# Platform fee recipient address (required)
EVM_ADDRESS=0x...

# Facilitator URL (optional, defaults to localhost for local development)
FACILITATOR_URL=http://localhost:8080

# HMAC shared secret for facilitator auth (optional, dev mode if unset)
FACILITATOR_SHARED_SECRET=

# SQLite database path (optional, defaults to ./gateway.db)
DB_PATH=./gateway.db

# Server port (optional, defaults to 4023)
PORT=4023

# Platform registration fee (optional, defaults to $0.01)
PLATFORM_FEE=$0.01

# CORS allowed origins (optional, comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limit requests per minute (optional, defaults to 60)
RATE_LIMIT_RPM=60

# RPC URL for Tempo chain (optional, uses default if unset)
RPC_URL=https://rpc.moderato.tempo.xyz
